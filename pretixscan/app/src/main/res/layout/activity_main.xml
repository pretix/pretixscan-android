<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="eu.pretix.pretixscan.droid.ui.ViewDataHolder" />

        <import type="eu.pretix.pretixscan.droid.ui.ResultState" />

        <import type="android.view.View" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:keepScreenOn="true"
            android:orientation="vertical">

            <include layout="@layout/include_main_toolbar" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_offline_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pretix_brand_red"
                android:visibility="@{data.isOffline ? View.VISIBLE : View.GONE}">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_cloud_off_white_24" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/checktype_offline"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView2"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <eu.pretix.pretixscan.droid.ui.ScannerView
                    android:id="@+id/scanner_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/vHardwareScan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="32dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="@{data.hardwareScan ? View.VISIBLE : View.GONE}"
                    tools:visibility="gone">

                    <ImageView
                        android:layout_width="128dp"
                        android:layout_height="128dp"
                        android:layout_marginBottom="8dp"
                        android:visibility="@{data.scanType.equals(&quot;entry&quot;) ? View.VISIBLE : View.GONE}"
                        app:srcCompat="@drawable/ic_entry_gray_24dp" />

                    <ImageView
                        android:layout_width="128dp"
                        android:layout_height="128dp"
                        android:layout_marginBottom="8dp"
                        android:visibility="@{data.scanType.equals(&quot;exit&quot;) ? View.VISIBLE : View.GONE}"
                        app:srcCompat="@drawable/ic_exit_orange_24dp" />

                    <TextView
                        android:id="@+id/tv_scanmode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:text="@{data.scanType.equals(&quot;exit&quot;) ? (data.kioskMode ? @string/scantype_exit_kiosk : @string/scantype_exit) : (data.kioskMode ? @string/scantype_entry_kiosk : @string/scantype_entry)}"
                        android:textAllCaps="true"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_config"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="@{data.configDetails}"
                        android:textColor="@color/text_color" />

                    <TextView
                        android:id="@+id/tvHardwareScan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/hardware_scanner"
                        android:textColor="@color/text_color"
                        android:visibility="@{!data.kioskMode ? View.VISIBLE : View.GONE}" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:keepScreenOn="true"
                    tools:visibility="visible">

                    <ImageView
                        android:id="@+id/iv_entry"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="16dp"
                        android:visibility="@{!data.hardwareScan &amp;&amp; data.scanType.equals(&quot;entry&quot;) ? View.VISIBLE : View.GONE}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_entry_gray_24dp" />

                    <ImageView
                        android:id="@+id/iv_exit"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="16dp"
                        android:visibility="@{!data.hardwareScan &amp;&amp; data.scanType.equals(&quot;exit&quot;) ? View.VISIBLE : View.GONE}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_exit_orange_24dp" />

                    <TextView
                        android:id="@+id/textView_status"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:maxLines="12"
                        android:singleLine="true"
                        android:text=""
                        tools:text="synchronization status message"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/fab_flash"
                        app:layout_constraintStart_toStartOf="parent" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab_focus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:clickable="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:srcCompat="@drawable/ic_focus_white_24dp" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab_flash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:clickable="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/fab_focus"
                        app:srcCompat="@drawable/ic_lightbulb_white_24dp" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        app:layout_constraintBottom_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_result"
                            style="?attr/materialCardViewElevatedStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:animateLayoutChanges="true"
                            android:clipChildren="true"
                            app:layout_constrainedWidth="true"
                            tools:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/event_bar"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@{data.getColor(data.result_state)}"
                                    android:backgroundTint="#19000000"
                                    android:backgroundTintMode="src_atop"
                                    android:visibility="@{data.event_name != null ? View.VISIBLE : View.GONE}"
                                    tools:background="@color/pretix_brand_green">

                                    <TextView
                                        android:id="@+id/textView1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="16dp"
                                        android:layout_marginTop="8dp"
                                        android:layout_marginEnd="8dp"
                                        android:layout_marginBottom="8dp"
                                        android:gravity="start"
                                        android:text="@{data.event_name}"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/card_result_test_size_small"
                                        android:visibility="@{data.event_name != null ? View.VISIBLE : View.GONE}"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        tools:text="Event Name (when multievent)"
                                        tools:visibility="visible" />
                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@{data.getColor(data.result_state)}"
                                    android:minHeight="@dimen/card_result_min_height"
                                    android:paddingBottom="@dimen/card_result_padding_bottom"
                                    tools:background="@color/pretix_brand_green">

                                    <ImageView
                                        android:id="@+id/ivResultOffline"
                                        android:layout_width="22dp"
                                        android:layout_height="22dp"
                                        android:layout_marginStart="16dp"
                                        android:layout_marginTop="8dp"
                                        android:visibility="@{data.result_offline ? View.VISIBLE : View.GONE}"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:srcCompat="@drawable/ic_cloud_off_white_24" />

                                    <Button
                                        android:id="@+id/ibPrint"
                                        style="@style/Widget.Material3.Button.IconButton"
                                        android:layout_width="48dp"
                                        android:layout_height="56dp"
                                        android:visibility="@{data.show_print ? View.VISIBLE : View.GONE}"
                                        app:icon="@drawable/ic_print_black_24dp"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintHorizontal_bias="1.0"
                                        app:layout_constraintStart_toEndOf="@+id/fl_statusicon"
                                        app:layout_constraintTop_toTopOf="parent" />

                                    <ProgressBar
                                        android:id="@+id/pbResultProgress"
                                        style="?android:attr/progressBarStyle"
                                        android:layout_width="@dimen/card_result_icon_size"
                                        android:layout_height="@dimen/card_result_icon_size"
                                        android:visibility="@{data.result_state == ResultState.LOADING ? View.VISIBLE : View.GONE}"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        tools:visibility="invisible" />

                                    <FrameLayout
                                        android:layout_width="16dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="16dp"
                                        android:clipChildren="true"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent">

                                        <TextView
                                            android:id="@+id/textView4"
                                            android:layout_width="100dp"
                                            android:layout_height="100dp"
                                            android:layout_marginLeft="-5dp"
                                            android:fontFamily="monospace"
                                            android:gravity="center|top"
                                            android:maxLines="1"
                                            android:rotation="270"
                                            android:text="@{data.detail2}"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/card_result_test_size_medium"
                                            android:visibility="@{data.detail2 != null ? View.VISIBLE : View.GONE}"
                                            tools:text="XMXMX-2" />
                                    </FrameLayout>

                                    <FrameLayout
                                        android:id="@+id/fl_statusicon"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/card_result_icon_padding"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent">

                                        <ImageView
                                            android:id="@+id/ivStatusIconSuccess"
                                            android:layout_width="@dimen/card_result_icon_size"
                                            android:layout_height="@dimen/card_result_icon_size"
                                            android:layout_gravity="center"
                                            android:visibility="@{data.result_state == ResultState.SUCCESS ? View.VISIBLE : View.GONE}"
                                            app:srcCompat="@drawable/ic_check_circle_white_24dp" />

                                        <ImageView
                                            android:id="@+id/ivStatusIconSuccessExit"
                                            android:layout_width="@dimen/card_result_icon_size"
                                            android:layout_height="@dimen/card_result_icon_size"
                                            android:visibility="@{data.result_state == ResultState.SUCCESS_EXIT ? View.VISIBLE : View.GONE}"
                                            app:srcCompat="@drawable/ic_exit_white_24dp"
                                            tools:visibility="gone" />

                                        <ImageView
                                            android:id="@+id/ivStatusIconWarning"
                                            android:layout_width="@dimen/card_result_icon_size"
                                            android:layout_height="@dimen/card_result_icon_size"
                                            android:visibility="@{data.result_state == ResultState.WARNING ? View.VISIBLE : View.GONE}"
                                            app:srcCompat="@drawable/ic_warning_white_24dp"
                                            tools:visibility="gone" />

                                        <ImageView
                                            android:id="@+id/ivStatusIconError"
                                            android:layout_width="@dimen/card_result_icon_size"
                                            android:layout_height="@dimen/card_result_icon_size"
                                            android:visibility="@{data.result_state == ResultState.ERROR ? View.VISIBLE : View.GONE}"
                                            app:srcCompat="@drawable/ic_error_white_24dp"
                                            tools:visibility="gone" />

                                    </FrameLayout>

                                    <TextView
                                        android:id="@+id/textView2"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="38dp"
                                        android:layout_marginEnd="38dp"
                                        android:gravity="center_horizontal|top"
                                        android:text="@{data.result_text}"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/card_result_test_size_large"
                                        android:visibility="@{data.result_text != null ? View.VISIBLE : View.GONE}"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/fl_statusicon"
                                        tools:text="Valid Ticket" />

                                    <LinearLayout
                                        android:id="@+id/linearLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="38dp"
                                        android:layout_marginTop="4dp"
                                        android:layout_marginEnd="38dp"
                                        android:orientation="vertical"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/textView2">

                                        <TextView
                                            android:id="@+id/textView3"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="@{data.detail1}"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/card_result_test_size_medium"
                                            android:visibility="@{data.detail1 != null ? View.VISIBLE : View.GONE}"
                                            tools:text="Product Name" />

                                        <TextView
                                            android:id="@+id/textView7"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dp"
                                            android:gravity="center"
                                            android:text="@{data.detail5}"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/card_result_test_size_small"
                                            android:visibility="@{data.detail5 != null &amp;&amp; !&quot;null&quot;.equals(data.detail5) ? View.VISIBLE : View.GONE}"
                                            tools:text="Long-form reason for the status" />

                                        <TextView
                                            android:id="@+id/textView10"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dp"
                                            android:gravity="center"
                                            android:text="@{data.detail8}"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/card_result_test_size_small"
                                            android:visibility="@{data.detail8 != null &amp;&amp; !&quot;null&quot;.equals(data.detail7) ? View.VISIBLE : View.GONE}"
                                            tools:text="First scanned: dd.MM. HH:mm" />

                                    </LinearLayout>

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/attention_flag"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/pretix_brand_blue"
                                    android:visibility="@{data.attention ? View.VISIBLE : View.GONE}">

                                    <ImageView
                                        android:id="@+id/imageView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:layout_marginTop="8dp"
                                        android:layout_marginBottom="8dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:srcCompat="@drawable/ic_warning_white_24dp" />

                                    <TextView
                                        android:id="@+id/textView"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:layout_marginTop="8dp"
                                        android:layout_marginEnd="8dp"
                                        android:layout_marginBottom="8dp"
                                        android:text="@string/ticket_attention"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toEndOf="@+id/imageView"
                                        app:layout_constraintTop_toTopOf="parent" />
                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/transparent"
                                    android:visibility="@{data.detail6 != null || data.detail7 != null || data.detail8 != null ? View.VISIBLE : View.GONE}">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="16dp"
                                        android:layout_marginEnd="16dp"
                                        android:orientation="vertical"
                                        android:paddingTop="8dp"
                                        android:paddingBottom="8dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintTop_toTopOf="parent">

                                        <TextView
                                            android:id="@+id/textView5"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@{data.detail3}"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                            android:textColor="@color/text_color"
                                            android:textSize="@dimen/card_result_test_size_medium"
                                            android:visibility="@{data.detail3 != null &amp;&amp; !&quot;null&quot;.equals(data.detail3) ? View.VISIBLE : View.GONE}"
                                            tools:text="Attendee name" />

                                        <TextView
                                            android:id="@+id/textView6"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dp"
                                            android:text="@{data.detail4}"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                            android:textColor="@color/text_color"
                                            android:textSize="@dimen/card_result_test_size_small"
                                            android:visibility="@{data.detail4 != null &amp;&amp; !&quot;null&quot;.equals(data.detail4) ? View.VISIBLE : View.GONE}"
                                            tools:text="Zone A, Row 3, Seat 5" />

                                        <TextView
                                            android:id="@+id/textView8"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dp"
                                            android:text="@{data.detail6}"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                            android:textColor="@color/text_color"
                                            android:textSize="@dimen/card_result_test_size_small"
                                            android:visibility="@{data.detail6 != null &amp;&amp; !&quot;null&quot;.equals(data.detail6) ? View.VISIBLE : View.GONE}"
                                            tools:text="Question: Answer\nQuestion: Answer" />

                                        <TextView
                                            android:id="@+id/textView9"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dp"
                                            android:text="@{data.detail7}"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                            android:textColor="@color/text_color"
                                            android:textSize="@dimen/card_result_test_size_small"
                                            android:visibility="@{data.detail7 != null &amp;&amp; !&quot;null&quot;.equals(data.detail7) ? View.VISIBLE : View.GONE}"
                                            tools:text="Order, Item, Variation Check-In Texts" />

                                    </LinearLayout>


                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </ScrollView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_search"
                        style="?attr/materialCardViewElevatedStyle"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="32dp"
                        android:animateLayoutChanges="true"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_max="600dp"
                        tools:visibility="gone">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerView_search"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="@{data.search_state == ResultState.SUCCESS ? View.VISIBLE : View.GONE}"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ProgressBar
                                    android:id="@+id/pbSearchProgress"
                                    style="?android:attr/progressBarStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginEnd="16dp"
                                    android:visibility="@{data.search_state == ResultState.LOADING ? View.VISIBLE : View.GONE}"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/tvSearchEmpty"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginEnd="16dp"
